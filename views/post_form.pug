extends layout 

block content
  .heading
    h1= title

  form( method='POST' action='' )
    label( for='title' ) Title:
    input#title(
      type='text'
      placeholder='Enter a Title'
      name='title'
    )
    label( for='content' ) Content:
    textarea#content(
      type='text'
      placeholder='Enter the content of the post'
      name='content'
    )
    button( type='submit' ) Submit
