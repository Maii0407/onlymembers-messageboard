extends layout 

block content
  h1= title

  form( method='POST' action='' )
    label( for='title' )
    input#title(
      type='text'
      placeholder='Enter a Title'
      name='title'
    )
    label( for='content' )
    textarea#content(
      type='text'
      placeholder='Enter the content of the post'
      name='content'
    )
    button( type='submit' ) Submit
